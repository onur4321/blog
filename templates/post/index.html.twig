{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
    <style>
        .posts{
            border-radius: 10px;
            box-shadow: 0 10px 16px rgb(0, 0, 0, 0.25);
            margin-bottom: 40px;
            margin-top: 40px;
            padding: 40px;
        }
        img{
            border-radius: 10px;            
        }
    </style>

    {% for post in posts %}
    
    <section class="posts">
        <article>
            <h2>{{ post.title }}</h2>
            <div class="metadat">
            {{ post.createdAt | date('Y-m-d')}} at {{ post.createdAt | date('H:i')}} by John
                
                <span class="badge bg-success">{{ post.category.title }}</span>
                5 comment
            </div>
            <div class="content">
                <img src="https://picsum.photos/seed/picsum/300/200" alt="" class="my-3">
                <p>{{ post.content }}</p>
                <a href="{{ path('app_post_show', {'id': post.id}) }}">Read More</a>
            </div>
        </article>
    </section>

    {% endfor %}

    <div class="navigation mt-5">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}
